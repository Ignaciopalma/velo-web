<p id="notice"><%= notice %></p>


<div class="cards">
  <div class="card">
    <div class="card-image">
      <img src="/assets/ciclis.001.jpeg" alt="">
    </div>
    <div class="card-header">
      <h2><%= @post.title %></h3>
    </div>
    <div class="card-copy">
      <p><%= @post.text %></p>
    </div>

    <div class="card-comments">
        <h3>Comentarios</h3>
        <% if @post.comments.count == 0 %>
            <p>No hay Comentarios</p>
        <% else %>
            <% @post.comments.each do |w| %>
                <h4><%= w.name %></h4>   
                <p><%= w.description %></p>
            <% end %>
        <% end %>
    </div>

    <div>
    	<%= render 'comments/form' %>
    </div>
  </div>
</div>


