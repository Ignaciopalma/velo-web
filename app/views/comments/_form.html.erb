<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="card-comments">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="card-comments">
    <%= f.label :description %>
    <%= f.text_area :description %>
    </div>

  <div>
    <%= f.submit class: "button" %>
  </div>

<% end %>
